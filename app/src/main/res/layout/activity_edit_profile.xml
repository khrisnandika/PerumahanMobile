<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#0A5896"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="@drawable/rounded_profilepage"
        />
    <ImageView
        android:layout_width="112dp"
        android:layout_height="138dp"
        android:src="@drawable/shape3"
        />
    <ImageView
        android:layout_width="112dp"
        android:layout_height="138dp"
        android:src="@drawable/shape4"
        android:layout_alignParentEnd="true"
        />
    <RelativeLayout
        android:id="@+id/layoutNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_24"
                app:tint="@color/white"
                android:clickable="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:gravity="center"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_below="@+id/layoutNavbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/avatar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgProfile"
        android:layout_marginTop="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <LinearLayout
                android:id="@+id/layoutBiodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Data Diri"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="13sp"
                    android:textColor="@color/blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="13dp"/>
                <EditText
                    android:id="@+id/etNamaPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="nama pengguna"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="13dp"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="email"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="13dp"/>
                <EditText
                    android:id="@+id/etJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="jenis kelamin"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Domisili"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="13sp"
                    android:textColor="@color/blue"
                    android:layout_marginTop="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Alamat"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="13dp"/>
                <EditText
                    android:id="@+id/etDetailAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="detail alamat"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsregular"/>
                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:text="Simpan"
                    android:fontFamily="@font/poppinssemibold"
                    app:backgroundTint="@color/blue"
                    android:background="@drawable/rounded_btn"/>
                <Button
                    android:id="@+id/btnHapusAkun"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Hapus Akun"
                    android:fontFamily="@font/poppinssemibold"
                    app:backgroundTint="@color/merah"
                    android:background="@drawable/rounded_btn"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>