<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDashboard">


    <ImageButton
        android:id="@+id/belakang"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:layout_toLeftOf="@+id/action_image"
        android:background="@android:color/transparent"
        android:contentDescription="@string/material_motion_easing_standard"
        android:src="@drawable/mundur" />

    <ImageSwitcher
        android:id="@+id/action_image"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:layout_width="300dp"
        android:layout_height="300dp"
android:layout_centerHorizontal="true"

        />

    <ImageButton
        android:id="@+id/maju"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@+id/action_image"
        android:background="@android:color/transparent"
        android:contentDescription="@string/material_motion_easing_standard"
        android:src="@drawable/maju" />

        <Button
            android:id="@+id/ringkasan"
            android:layout_width="150dp"
            android:layout_height="48dp"
            app:backgroundTint="@color/suram"
            android:shadowColor="@color/black"
            android:layout_marginHorizontal="35dp"
            android:text="Ringkasan"
            android:textColor="@color/black"
            android:background="@drawable/rounded_btn"
            android:textStyle="bold"
            android:layout_below="@+id/action_image"/>
        <Button
            android:id="@+id/tinjauan"
            android:layout_width="150dp"
            android:layout_height="48dp"
            app:backgroundTint="@color/suram"
            android:shadowColor="@color/black"
            android:text="Tinjauan"
            android:textColor="@color/black"
            android:background="@drawable/rounded_btn"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ringkasan"
            android:layout_below="@+id/action_image"/>

   <RelativeLayout
       android:id="@+id/relative"
       android:layout_width="60dp"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ringkasan">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ukuran"
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"

           >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ukuran"
           android:textSize="9sp"
           android:textStyle="bold"
           />
           <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="9x4"
           android:textSize="7sp"
           />
       </LinearLayout>
   </RelativeLayout>

</RelativeLayout>