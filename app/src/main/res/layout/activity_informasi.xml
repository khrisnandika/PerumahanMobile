<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informasi"
    android:orientation="vertical"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp">

    <LinearLayout
        android:id="@+id/layoutNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Rumah"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:textColor="@color/fontColor"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtPerumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PERUMAHAN"
            android:textSize="35sp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/fontColor"
            android:layout_marginTop="91dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perumahan Taraktakdung"
            android:gravity="center"
            android:layout_marginTop="139dp"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/fontColor"
            />
    </RelativeLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:src="@drawable/house"
        android:layout_marginTop="114dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Perumahan Versi 1.0 \n Dikembangkan Oleh Mahasiswa \n Politeknik Negeri Jember"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="12sp"
        android:textColor="@color/fontColor"
        />


</LinearLayout>