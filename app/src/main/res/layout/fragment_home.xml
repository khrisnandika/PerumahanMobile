<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Krisna"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="57dp"
        android:textColor="@color/fontColor"
        android:layout_marginLeft="26dp"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A great day to get better"
        android:layout_below="@+id/txt1"
        android:textColor="@color/fontColor"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginLeft="26dp"
        />
    <ImageView
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/avatar"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        />
    <EditText
        android:id="@+id/fieldSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/secondary"
        android:hint="Cari Disini"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:paddingLeft="54dp"
        android:textColor="#8A8A8A"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        />

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fieldSearch"
        android:layout_marginStart="26dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_btn"
        android:orientation="horizontal"
        android:weightSum="3"
        android:backgroundTint="@color/white"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tabItem1"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1.5"
            android:text="Dijual"
            android:gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/white"
            android:background="@drawable/rounded_btn"
            />
        <TextView
            android:id="@+id/tabItem2"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1.5"
            android:text="Disewakan"
            android:gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:textColor="#AAAAAA"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutButton"/>

</RelativeLayout>