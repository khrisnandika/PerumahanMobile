<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/bubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bubble"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_24"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="32dp"
        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:text="Creat a New Account"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/txt1"
        android:text="Create an account so you can manage your personal finance"
        android:fontFamily="@font/poppinsregular"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtField1"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginTop="66dp"
            android:layout_below="@+id/txt2"
            android:layout_gravity="center"
            android:hint="Enter your full name"
            android:textColorHint="@color/black"
            android:paddingLeft="30dp"
            android:textSize="13dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#EFEFEF"
            android:fontFamily="@font/poppinsregular"/>
        <EditText
            android:id="@+id/txtField2"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt2"
            android:layout_gravity="center"
            android:hint="Enter your email"
            android:textColorHint="@color/black"
            android:paddingLeft="30dp"
            android:textSize="13dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#EFEFEF"
            android:fontFamily="@font/poppinsregular"/>
        <EditText
            android:id="@+id/txtField3"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt2"
            android:layout_gravity="center"
            android:hint="Create password"
            android:textColorHint="@color/black"
            android:paddingLeft="30dp"
            android:textSize="13dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#EFEFEF"
            android:fontFamily="@font/poppinsregular"/>
        <EditText
            android:id="@+id/txtField4"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt2"
            android:layout_gravity="center"
            android:hint="Confirm password"
            android:textColorHint="@color/black"
            android:paddingLeft="30dp"
            android:textSize="13dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#EFEFEF"
            android:fontFamily="@font/poppinsregular"/>
        <Button
            android:layout_width="284dp"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            app:backgroundTint="@color/blue"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="Create account"
            android:textSize="16dp"
            android:fontFamily="@font/poppinssemibold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_below="@id/layout1"
        android:layout_marginBottom="107dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/blue"
            android:textSize="12dp"
            />
    </LinearLayout>

</RelativeLayout>